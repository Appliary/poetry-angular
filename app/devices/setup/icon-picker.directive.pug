span
    script(type='text/ng-template', id='popupConfirm.pug').
        <div class="modal-header">
            <h4 class="modal-title">Icon Picker</h4>
        </div>
        <div class="modal-body">
            <div class="input-group col-xs-12">
                <span class="input-group-addon">
                    <i class="fa fa-search"></i>
                </span>
                <input type="text" class="form-control" ng-model="filterIconsName">
                <span class="input-group-btn">
                    <button class="btn green" ng-click="closeThisDialog();" type="button" style="line-height: 1.44">
                        <i class="fa fa-close"></i>
                    </button>
                </span>
            </div>
            <div style="overflow-y: auto; max-height:400px;" >
                <span ng-repeat="icon in icons | filter: { name : filterIconsName } track by $index"  >
                    <img data-ng-src="data:image/png;base64,{{icon.data}}" ng-click="vm.click( icon ); closeThisDialog();"/>
                </span>
            </div>
        </div>
        <div class="modal-footer">
            <div class="has-error" ng-if='__validation.length == 0'>
                <span class="help-block">{{message}}</span>
            </div>
            <button class="btn dark btn-outline" type="button" ng-click='closeThisDialog()'>Close</button>
            <button class="btn green" type="button" ng-click='save()' ng-if="!disableSaveBTN">Save changes</button>
        </div>