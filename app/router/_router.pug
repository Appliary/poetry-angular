.page-bar
    ul.page-breadcrumb
        li
            a(ng-href="/{{$root.__appName}}") 
                | {{ $root.__appName + ':application:header' | translate }}
            i.fa.fa-circle
        li
            a(ng-click='$root.go($root.__module)') 
                | {{ $root.__module.name + ':module:title' | translate }}
            i.fa.fa-circle(ng-if='__id')
        li(ng-if='__id')
            a(ng-click="tab('')")
                | {{ __id }}
            i.fa.fa-circle(ng-if='__view')
        li(ng-if='__view')
            a {{ __view | translate }}

    .page-toolbar
        .btn-group.pull-right
            button.btn.green.btn-sm.btn-outline.dropdown-toggle(type='button', data-toggle='dropdown', data-hover='dropdown', data-delay='1000', data-close-others='true')
                | Actions 
                i.fa.fa-angle-down
            ul.dropdown-menu.pull-right(role='menu')
                li(ng-repeat='( name, config ) in $root.__module.config.toolbox', ng-click="openToolbox( name )")
                    a(href='#')
                        i.icon-bell 
                        |  {{ name + ':toolbox:' + $root.__module.name | translate }}
                
ng-include.container(src='$root.__module.templateUrl')