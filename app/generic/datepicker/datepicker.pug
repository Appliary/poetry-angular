.input-group
    input.form-control(
      type="text",
      uib-datepicker-popup="{{calendars.c1.format}}",
      ng-model="datevalue",
      ng-model-options="{ allowInvalid: false }",
      is-open="calendars.c1.open",
      datepicker-options="calendars.c1.options",
      close-text="{{'Close' | translate}}",
      alt-input-formats="calendars.c1.altFormats")
    .input-group-addon(ng-click="open('c1')")
        i.fa.fa-calendar
