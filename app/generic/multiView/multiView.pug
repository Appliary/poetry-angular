h1.page-title
    | {{ $root.__module.name + ':module:title' | translate }} 
    small {{ $root.__module.name + ':module:subtitle' | translate }}

.portlet-container(ng-class="__id ? 'col-md-7 visible-md-block visible-lg-block' : 'col-md-12'")
    .portlet.light.bordered
        .portlet-title
            .col-xs-7.col-md-8.row
                .input-icon.right
                    i.icon-magnifier
                    input.form-control( type="text", ng-model="searchText", ng-model-options="{debounce: 250}", placeholder="{{'search:'+$root.__module.name|translate}}")

        .portlet-body(ng-if="general.activeView === 'tree'", style="overflow-y: auto;")
            .tab-content
                tree-view(
                options="treeView.options",
                edit-item="item",
                update-item="updateItem",
                add-item="addItem")

ng-include.portlet-container.col-md-5.col-xs-12(ng-if="__id", src="actions.getMultiViewEdit()")