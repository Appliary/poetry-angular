div(ng-controller="lineCtrl")
    fieldset()
        span(style="width: 100%")
            label
                | {{ 'From:editwidget' | translate }}
            datepicker
                input(ng-model="widget.startDate", type="text")
            label
                | {{'To:editwidget' | translate }}
            datepicker
                input(ng-model="widget.endDate", type="text")
        span(style="width: 100%;")
            input.form-control(style="width:20%;",type="text",ng-model="search", placeholder="search")
            select.form-control(ng-model="widget.deviceId",id="widget.deviceId", ng-change="selectDevice(widget.deviceId)")
                option(ng-repeat="device in devicesData | filter:search") {{ device._id }}
            select.form-control(style="width:20%;",ng-model="widget.measurementType",id="widget.measurementType")
                option(ng-repeat="measurement in widget.selectedDevice.last") {{ measurement.type }}
            button(ng-click="addDevice(widget.deviceId, true)") {{ '+' }}

        table(class="table-condensed tableModalWidget")
            thead
                tr
                    th
                        span
                            | Device
                    th
                        span
                            | Color
                    th
                        span
                            | Actions
            tbody
                tr(ng-repeat="device in widget.deviceList")
                    td
                        span.modalInputWidget
                            | {{ device.id }}
                    td
                        span.modalInputWidget
                            | {{ device.color }}
                    td
                        span.modalInputWidget(ng-click="removeDevice(device)")
                            | {{ 'Remove:modalLine' | translate }}
    .modalButtons
        button.btn.btn-primary.pull-right(ng-click="confirm({'newWidget' : widget,'title' : $parent.$parent.widget.title})")
            | `Apply`
