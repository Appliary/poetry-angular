.modal-header
    h4.modal-title {{ 'Enter the title:dashboard' | translate }}

.modal-body
    input.form-control(type="text", ng-model="nameValue")

.modal-footer
    button.btn.default(type="button", ng-click="closeThisDialog(0)") 
        | {{ 'Cancel:dashboard' | translate }}
    button.btn.green(type="button", ng-click="confirm(nameValue)")
        | {{ 'Confirm:dashboard' | translate }}
