div(class="modalEditWidget")
    div#listWidget(class="form-group")
        span
            input(type="text",ng-model="widget.type",ng-if="!createWidget", readonly)
            select.selectNewWidget(ng-model="widget.type",ng-show="createWidget", placeholder="Type")
                option(value='line') Line
                //option(value='candlestick') CandleStick
                //option(value='table') Table
                option(value='gauge') Gauge
                option(value='map') Map
                option(value='image') Image
                option(value='video') Video
                option(value='combo') Combo
                option(value='pie') Pie
                option(value='column', disabled) Column
                option(value='adaptative',disabled) Adaptative
                //option(value='svg') SVG
                option(value='bar',disabled) Bar
                option(value='area',disabled) Area
                option(value='bubble',disabled) Bubble
                option(value='geo',disabled) Geo
                //option(value='histogramme',disabled) Histogramme

            input.form-control(ng-model="widget.title", placeholder=" Title")



        
        ng-include(src="'dashboard/widget/image/modalImage.pug'",ng-if="widget.type=='image'")
        ng-include(src="'dashboard/widget/gauge/modalGauge.pug'",ng-if="widget.type=='gauge'")
        ng-include(src="'dashboard/widget/line/modalLine.pug'",ng-if="widget.type=='line'")
        ng-include(src="'dashboard/widget/adaptative/modalAdaptative.pug'",ng-if="widget.type=='adaptative'")
        ng-include(src="'dashboard/widget/column/modalColumn.pug'",ng-if="widget.type=='column'")
        //- ng-include(src="'/templates/dashboard/widget/svg/modalSvg.pug'",ng-if="widget.type=='svg'")
        ng-include(src="'dashboard/widget/map/modalMap.pug'",ng-if="widget.type=='map'")
        ng-include(src="'dashboard/widget/video/modalVideo.pug'",ng-if="widget.type=='video'")
        ng-include(src="'dashboard/widget/combo/modalCombo.pug'",ng-if="widget.type=='combo'")
        ng-include(src="'dashboard/widget/pie/modalPie.pug'",ng-if="widget.type=='pie'")

