.modal-header
    h4.modal-title {{ 'edit:VideoWidget' | translate }}

.modal-body
    form.form-horizontal
        .form-body
            .form-group
                label.col-md-3.control-label {{ 'title:widget:label' | translate }}
                .col-md-9
                    input.form-control(ng-model="widget.title")
            .form-group
                label.col-md-3.control-label {{ 'url:video:dashboard' | translate }}
                .col-md-9
                    input.form-control(type="text", ng-model="widget.options.url")

.modal-footer
    button.btn.default(ng-click="closeThisDialog()")
        | {{ 'Cancel:dashboard' | translate }}
    button.btn.green(ng-click="confirm(widget)")
        | {{ 'Confirm:dashboard' | translate }}
